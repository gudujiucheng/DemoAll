<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt_check_phone_state"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="check" />

        <Button
            android:id="@+id/bt_get_phone_state"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="getPhoneState" />
        <Button
            android:id="@+id/bt_get_normal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="自定义权限normal" />

        <Button
            android:id="@+id/bt_get_danger_no_permission"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="自定义权限danger no permission" />
        <Button
            android:id="@+id/bt_get_danger"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="自定义权限danger" />


    </LinearLayout>


</ScrollView>