<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:clickable="false"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">
        <EditText
            android:id="@+id/et_test_RGB_565"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="选择模式 1-3"
            android:inputType="numberDecimal"
            android:text="1" />
        <Button
            android:id="@+id/bt_get_img_size_RGB_565"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RGB_565/ARGB_8888/ARGB_4444" />
        <EditText
            android:id="@+id/et_test_matrix"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="缩放压缩比例"
            android:inputType="numberDecimal"
            android:text="0.5" />

        <Button
            android:id="@+id/bt_get_img_size_matrix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="缩放压缩" />

        <EditText
            android:id="@+id/et_test"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="请输入压缩率0-100"
            android:inputType="number"
            android:text="100" />

        <Button
            android:id="@+id/bt_get_img_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="有损压缩" />

        <EditText
            android:id="@+id/et_test_inSampleSize"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="请输入采样率"
            android:inputType="number"
            android:text="2" />

        <Button
            android:id="@+id/bt_get_img_size_inSampleSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="采样率压缩" />

        <Button
            android:id="@+id/bt_get_img_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取图片信息" />

        <Button
            android:id="@+id/bt_get_img_size_luban"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="第三方框架Luban" />

        <ImageView
            android:id="@+id/iv_test"
            android:layout_width="match_parent"
            android:minHeight="200dp"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter" />





    </LinearLayout>

</ScrollView>