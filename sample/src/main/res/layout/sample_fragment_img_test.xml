<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt_get_check_support"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="是否支持HEIF"/>


        <Button
            android:id="@+id/bt_get_scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="图片扫描"/>


        <Button
            android:id="@+id/bt_set_heif_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="显示heif文件 bitmap" />

        <Button
            android:id="@+id/bt_set_heif_img_02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="显示heif文件 drawable" />

        <Button
            android:id="@+id/bt_set_heif_img_03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="显示heif文件 raw" />

        <Button
            android:id="@+id/bt_bitmap_to_heif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="android x bitmap编码成 heif" />

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/sample_close" />

        <EditText
            android:id="@+id/et_input_color"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="输入颜色，尝试更改图标颜色"
            android:text="#FF4081" />

        <Button
            android:id="@+id/bt_change_icon_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="更改图标颜色" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="-----------我是分割线，下方是压缩相关代码----------" />


        <EditText
            android:id="@+id/et_test_RGB_565"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="选择模式 1-3"
            android:inputType="numberDecimal"
            android:text="1" />

        <Button
            android:id="@+id/bt_get_img_size_RGB_565"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RGB_565/ARGB_8888/ARGB_4444" />

        <EditText
            android:id="@+id/et_test_matrix"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="缩放压缩比例"
            android:inputType="numberDecimal"
            android:text="0.5" />

        <Button
            android:id="@+id/bt_get_img_size_matrix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="缩放压缩" />

        <EditText
            android:id="@+id/et_test"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="请输入压缩率0-100"
            android:inputType="number"
            android:text="100" />

        <Button
            android:id="@+id/bt_get_img_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="有损压缩" />

        <EditText
            android:id="@+id/et_test_inSampleSize"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="请输入采样率"
            android:inputType="number"
            android:text="2" />

        <Button
            android:id="@+id/bt_get_img_size_inSampleSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="采样率压缩" />

        <Button
            android:id="@+id/bt_get_img_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取图片信息" />


        <Button
            android:id="@+id/bt_get_img_size_luban"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="第三方框架Luban" />




        <ImageView
            android:id="@+id/iv_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:scaleType="fitCenter" />


    </LinearLayout>

</ScrollView>