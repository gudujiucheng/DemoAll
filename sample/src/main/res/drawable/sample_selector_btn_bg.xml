<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="8dp" />
            <stroke android:color="#FF1C8AF4" />
            <solid android:color="#FF1C8AF4" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <corners android:radius="8dp" />
            <stroke android:color="#D3E5FB" />
            <solid android:color="#78BAFF" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="8dp" />
            <stroke android:color="#FF1C8AF4" />
            <solid android:color="#3B9BFF" />
        </shape>
    </item>
</selector>